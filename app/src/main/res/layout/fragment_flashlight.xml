<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFlashlight"
    tools:context=".view.fragments.FlashlightFragment"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/ic_Container"
        layout="@layout/container_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivFlashlightOn"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/flashlight_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:contentDescription= "Encender linterna"
        android:id="@+id/ivButtonOn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/button_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:contentDescription ="Ir a linterna"
            android:id="@+id/ivFlashligh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/ic_linterna"
            app:tint="@color/backgroundLapm" />

        <ImageView
            android:contentDescription ="Ir a lampara"
            android:id="@+id/ivLamp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/iclampara"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>