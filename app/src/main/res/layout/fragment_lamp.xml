<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundLapm"
    tools:ignore="MissingConstraints"
    tools:context=".view.fragments.LampFragment">

    <include
        android:id="@+id/ic_Container"
        layout="@layout/container_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:contentDescription ="Deslizar para modificar brillo"
        android:id="@+id/ivBombilla"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/lamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorLamp" />
    <TextView
        android:id="@+id/tvPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:layout_marginVertical="36dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivBombilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tvSigne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:layout_marginVertical="36dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivBombilla"
        app:layout_constraintStart_toEndOf="@id/tvPorcentaje"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:contentDescription ="Ir a linterna"
            android:id="@+id/ivFlashligh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/ic_linterna"/>

        <ImageView
            android:contentDescription ="Ir a lampara"
            android:id="@+id/ivLamp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="24dp"
            android:src="@drawable/iclampara"
            app:tint="@color/backgroundFlashlight"/>
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>